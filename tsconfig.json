{
  "compilerOptions": {
    /* 基础配置 */
    "target": "esnext",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "removeComments": false,
    "declaration": true,
    "sourceMap": true,
    /* 强类型检查配置 */
    "strict": true,
    "noImplicitAny": false,
    /* 模块分析配置 */
    "baseUrl": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "typeRoots": [
    "./node_modules/@types/",
    "./types"
  ],
  "include": [
    "src"
  ]
}